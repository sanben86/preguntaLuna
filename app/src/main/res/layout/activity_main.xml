<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.magiceightball.MainActivity"
    android:background="@drawable/fondo"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Pregúntale a Amalia!"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Piensa tu pregunta y presiona la Luna!"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp"/>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_margin="0dp"
        app:cardCornerRadius="110dp"
        app:cardElevation="0dp"
        android:layout_width="220dp"
        android:layout_height="220dp">

    <ImageView

        tools:ignore="ContentDescription"
        android:scaleType="centerCrop"
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/moon" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu respuesta es:"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/respuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Para más consultas presiona abajo!:"
        android:layout_marginBottom="20dp"/>


    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="11dp"
        app:cardElevation="0dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        >

    <Button
        android:id="@+id/btn_wp"
        android:layout_gravity="center"
        android:background="@drawable/wp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="90dp"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whatsapp: 1559602537"
        />

</LinearLayout>